print('a = celcius -fahrenheit')
print('b = fahrenheit - celcius')
celcius = True

while celcius:
    value = str(input('Enter between option A & B '))
    print('Your value is: {}\n'.format(value))
    
    if value == 'a':
        value = int(input('Enter your Celcius: '))
        print('Your value is: {}'.format(value))
        celcius = (value/5)*9 +32
        print(f'Your Value in Farehiet is: {celcius}\n')
        
    elif value == 'b':
        value = int(input('Enter your Fahrenheit: '))
        print('Your value is: {}'.format(value))
        celcius = ((value-32)*5) /9
        print(f'Your Value in Farehiet is: {celcius}\n')
    
print('Enter right option between a and b')
value = str(input('Enter your Value: '))
print('Your value is: {}\n'.format(value))

break
